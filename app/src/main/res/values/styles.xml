<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>

        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="MaterialComponentsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBabyBlue</item>
        <item name="colorPrimaryDark">@color/colorBabyBlue</item>
        <item name="colorAccent">@color/colorBabyBlue</item>

        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/paybooc_font_family</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/paybooc_font_family</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/paybooc_font_family</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_text_dark</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/paybooc_extra_bold_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PayboocFontFamilyStyle">
        <item name="android:fontFamily">@font/paybooc_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>